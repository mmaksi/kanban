generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Board {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  boardName String
  tasks     Task[]
}

model Task {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  boardId String @db.ObjectId
  board   Board   @relation(fields: [boardId], references: [id])
}
